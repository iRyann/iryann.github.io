---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Ressources" sideBarActiveItemID="ressources">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Mes cours d'informatique</div>
  </div>

  <HorizontalCard
    title="Bases en Python - ITC CPGE"
    img="/ressources/python.png"
    desc="Attendus au programme des deux premiers semestres d'informatique tronc commun en CPGE."
    url="https://iryann.github.io/ressources/Python.pdf"
    badge="En cours de rédaction"
  />
  <div class="divider my-0"></div>
  
  <HorizontalCard
    title="Cours de OCaml avancé"
    img="/ressources/ocaml.png"
    desc="Attendus au programme de MP2I/MPI et compléments de programmation orienté objet. Les parties sur le hachage et la POO seront bientôt disponibles"
    url="https://iryann.github.io/ressources/Cours_d_Ocaml.pdf"
    badge="En cours de rédaction"
  />
  <div class="divider my-0"></div>
  
  <div>
    <div class="text-3xl w-full font-bold mb-5">Mes cours de mathématiques</div>
  </div>
  <HorizontalCard
    title="Ensemble et dénombrement - Terminale"
    img="/ressources/maths_1.png"
    desc="Attendus au programme"
    url="https://iryann.github.io/ressources/Cours_de_mathématiques_Term.pdf"
    
  />
  <div class="divider my-0"></div>
  
  <div>
    <div class="text-3xl w-full font-bold mb-5">Mes fiches de philosophie</div>
  </div>
  
</BaseLayout>
